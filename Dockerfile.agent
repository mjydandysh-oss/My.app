FROM python:3.12-slim

WORKDIR /app

# Install basic deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy package and install
COPY . /app
RUN pip install --no-cache-dir ./releases/myapp_agent-0.1.0-py3-none-any.whl

EXPOSE 9000

CMD ["myapp-agent","serve","--host","0.0.0.0","--port","9000"]
